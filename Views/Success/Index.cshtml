@model LMVC.Models.AuthenticationResponse

<!DOCTYPE html>
<html>
<head>
    <title>Add New User</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<div class="container mt-5">
    <h2>Add New User</h2>
    <form>
        <div class="form-group">
            <label for="staffId">Staff ID : Model.StaffId </label>
            @* <input type="text" class="form-control" id="staffId" name="staffId"> *@
        </div>
        <div class="form-group">
            <label for="userroles">User Roles: Model.UserRole</label>
            @* <input type="text" class="form-control" id="userroles" name="userroles"> *@
        </div> 
        <div class="form-group">
            <label for="email">Email : Model.Email</label>
            @* <input type="email" class="form-control" id="email" name="email"> *@
        </div>
        <div class="form-group">
            <label for="fullName">Full Name: Model.StaffName</label>
            @* <input type="text" class="form-control" id="fullName" name="fullName"> *@
        </div>
        <div class="form-group">
            <label for="region">Region</label>
            <input type="text" class="form-control" id="region" name="region">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>









